@using CourseManagement.Models
@model TeachersViewModel
@{
    ViewData["Title"] = "Teachers";

    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Teachers</title>
    <meta charset="UTF-8">
</head>
<body>
    <form>
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Teachers List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="Teachers" asp-action="Create" class="btn btn-info">
                    @*<i class="fas fa-plus"></i>*@Create New Teacher
                </a>
            </div>
        </div>

        <div class="border bg-white">
            <br />
            <div>
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Surname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Profession)
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Teachers)
                    {
                        <tr class="table text-black">
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Profession)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning">Add</a>
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <partial name="Pager" model="@pager" />
        </div>
    </form>
</body>
</html>