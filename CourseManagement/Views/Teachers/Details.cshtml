@model TeachersViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Teacher Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Surname
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            PhoneNumber
         </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
             BirthDate
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate
        </dd>
        <dt class="col-sm-2">
            Profession
        </dt>
        <dd class="col-sm-10">
            @Model.Profession
        </dd>
        <dt class="col-sm-2">
            IsDeleted
        </dt>
        <dd class="col-sm-10">
            @Model.IsDeleted
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Teachers" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-sm btn-warning">Edit</a> |
    <a href="##" class="btn btn-sm btn-warning ml-1" onClick="history.go(-1); return false;"> Return to back</a>
</div>
